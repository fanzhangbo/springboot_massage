.container {
  height: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx;
  flex-direction: column;
}
.input-body {
  margin: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 40rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.input-body .title {
  margin-bottom: 10rpx;
  text-align: center;
}
.input-body .radio-item {
  display: block;
  height: 90rpx;
  text-align: left;
  line-height: 90rpx;
  padding: 0 30rpx 10rpx;
  border: 2rpx solid #ccc;
  margin-bottom: 10rpx;
  border-radius: 45rpx;
}
.picker {
  height: 90rpx;
  padding: 0 30rpx;
  border-radius: 45rpx;
  line-height: 90rpx;
  border: 2rpx solid #ccc;
}