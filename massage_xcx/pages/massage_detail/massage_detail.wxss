.container {
  height: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx;
  flex-direction: column;
  margin-bottom: 120rpx;
}
.header {
  position: relative;
}
.detail-img image{
  width: 100%;
}
.title {
  position: absolute;
  left: 20rpx;
  bottom: 30rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
}
.content {
  text-indent: 2em;
}
.do-order-btn {
  
  position: fixed;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  left: 0;
  bottom: 0;
  background-color: rgb(0, 255, 157);
  border-radius: 20rpx;
  text-align: center;
}